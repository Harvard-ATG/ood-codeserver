this_script="template/after.sh.erb"

log() {
    echo -e "[$(date -Iseconds)][${this_script}] $1"
}

# Wait for the Code Server to start
log "Waiting for Code Server to open port ${port}..."

if wait_until_port_used "${host}:${port}" 600; then
  log "Discovered code-server listening on port ${port}!"
else
  log "Timed out waiting for Code Server to open port ${port}!"
  clean_up 1
fi

sleep 2
